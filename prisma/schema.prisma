generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Project {
  id           String     @id @default(uuid())
  name         String
  short_desc   String
  description  String?
  image        String
  created_by   String
  technologyId String     @unique
  technology   Technology @relation(fields: [technologyId], references: [id])
  live         String
  github       String
  createdAt    DateTime   @default(now())
  updatedAt    DateTime   @updatedAt
}

model Technology {
  id       String   @id @default(uuid())
  backend  String[]
  frontend String[]
  Project  Project?
}
